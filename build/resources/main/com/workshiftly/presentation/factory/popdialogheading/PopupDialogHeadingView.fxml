<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<HBox fx:id="baseWrapper" maxWidth="500.0" minWidth="-Infinity" prefHeight="60.0" prefWidth="500.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.workshiftly.presentation.factory.popdialogheading.PopupDialogHeadingView">
   <children>
      <Pane fx:id="iconWrapper" maxHeight="50.0" minHeight="50.0" prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: white; -fx-background-insets: 10;">
         <children>
            <ImageView fx:id="headingImageView" fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../../images/icons/popup_dialogbox/information.png" />
               </image>
               <rotationAxis>
                  <Point3D />
               </rotationAxis>
            </ImageView>
         </children>
      </Pane>
      <Pane fx:id="headingWrapper" prefHeight="0.0" prefWidth="480.0">
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" top="10.0" />
         </HBox.margin>
         <children>
            <Label fx:id="headingTxtLbl" prefWidth="450.0" text="Are you sure to exit from the application? Are you sure to exit from the application?" wrapText="true">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
               <padding>
                  <Insets right="10.0" top="5.0" />
               </padding>
            </Label>
         </children>
      </Pane>
   </children>
</HBox>
